<mvc:View controllerName="sap.gestlog.plataforma.controller.RecebimentoCarregamento" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Page title="ZGestLog - Recebimento" showHeader="true" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<mvc:XMLView viewName="sap.gestlog.plataforma.view.RecebimentoCarregamento.Cabecalho"/>
			<mvc:XMLView viewName="sap.gestlog.plataforma.view.RecebimentoCarregamento.Transporte"/>
			<mvc:XMLView viewName="sap.gestlog.plataforma.view.RecebimentoCarregamento.Veiculo"/>
			<mvc:XMLView viewName="sap.gestlog.plataforma.view.RecebimentoCarregamento.Motorista"/>
			<mvc:XMLView viewName="sap.gestlog.plataforma.view.RecebimentoCarregamento.ListaDocumentosDeVendas"/>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button type="Emphasized" id="btnGravarRecebimento" icon="sap-icon://save" text="Gravar" press="onGravarRecebimento" tooltip="Gravar dados do recebimento do Carregamento">
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow"/></layoutData>
				</Button>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>